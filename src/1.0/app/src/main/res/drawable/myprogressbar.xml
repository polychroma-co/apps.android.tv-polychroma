<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0dip" />
            <gradient android:startColor="#000" android:centerColor="#000"
                android:centerY="0.75" android:endColor="#000" android:angle="90" />
            <stroke android:width="0.01dp" android:color="#000" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0dip" />
                <gradient android:startColor="#000" android:endColor="#000"
                    android:angle="90" />
                <stroke android:width="1dp" android:color="#000" />
            </shape>
        </clip>
    </item>
</layer-list>